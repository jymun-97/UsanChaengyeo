<resources>
    <!-- Base application theme. -->
    <style name="Theme.UsanChaengyeo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_signature</item>
        <item name="colorPrimaryVariant">@color/app_signature_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_signature</item>
        <item name="colorSecondaryVariant">@color/app_signature_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AddressTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="SettingLabelTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="thumbColor">@color/white</item>
        <item name="thumbRadius">6dp</item>
        <item name="trackColor">@color/gray</item>
        <item name="android:valueFrom">0</item>
        <item name="android:valueTo">100</item>
        <item name="tickVisible">false</item>
        <item name="android:stepSize">1</item>
        <item name="tickMarkTint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>